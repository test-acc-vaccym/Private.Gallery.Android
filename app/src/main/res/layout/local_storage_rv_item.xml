<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.privategallery.akscorp.privategalleryandroid.Widgets.SquareImageView
            android:id="@+id/preview_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:background="@drawable/border_image_view"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/preview_iv"
            android:layout_alignRight="@+id/preview_iv"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_check_circle_black_24dp" />

        <TextView
            android:id="@+id/image_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/preview_iv"
            android:gravity="center"
            android:text="TextView" />
    </RelativeLayout>

</LinearLayout>